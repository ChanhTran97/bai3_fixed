<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:orientation="vertical">
    <ScrollView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            app:cardCornerRadius="3dp"
            android:id="@+id/card1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Our Team"
                    android:id="@+id/OurTeam"
                    android:textStyle="bold"
                    android:textSize="30dp"
                    android:textColor="@android:color/black"
                    android:layout_centerHorizontal="true"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/hinhgach"
                    android:id="@+id/hinhgach"
                    android:layout_below="@+id/OurTeam"/>

                <ImageView
                    android:layout_width="30dp" android:layout_height="30dp"
                    android:src="@drawable/images"
                    android:layout_marginRight="40dp"
                    android:id="@+id/images"
                    android:layout_marginStart="40dp"
                    android:layout_below="@id/hinhgach" android:layout_marginLeft="40dp"/>

                <TextView
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="Adams G"
                    android:layout_below="@id/images"
                    android:id="@+id/text"
                    android:layout_marginLeft="20dp"/>

                <ImageView
                    android:layout_width="30dp" android:layout_height="30dp"
                    android:src="@drawable/images1"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/image1"
                    android:layout_below="@id/hinhgach"/>

                <TextView
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="  Betty L"
                    android:layout_below="@id/image1"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/text1"/>

                <ImageView
                    android:layout_width="30dp" android:layout_height="30dp"
                    android:src="@drawable/images2"
                    android:id="@+id/image2"
                    android:layout_marginLeft="290dp"
                    android:layout_below="@id/hinhgach"/>

                <TextView
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="Roberts"
                    android:layout_marginStart="280dp"
                    android:id="@+id/Roberts"
                    android:layout_below="@id/image2" android:layout_marginLeft="280dp"/>

                <ImageView
                    android:layout_width="30dp" android:layout_height="30dp"
                    android:src="@drawable/images3"
                    android:layout_marginLeft="40dp"
                    android:id="@+id/images3"
                    android:layout_below="@id/text"/>

                <TextView
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="  Miller W"
                    android:layout_below="@id/images3"
                    android:layout_marginStart="25dp" android:layout_marginLeft="25dp"/>

                <ImageView
                    android:layout_width="30dp" android:layout_height="30dp"
                    android:src="@drawable/images4"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/text1"
                    android:id="@+id/images4"/>

                <TextView
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="Kevin John"
                    android:layout_below="@id/images4"
                    android:layout_centerHorizontal="true"/>

                <ImageView
                    android:layout_width="30dp" android:layout_height="30dp"
                    android:src="@drawable/images5"
                    android:layout_below="@id/Roberts"
                    android:layout_marginLeft="290dp"
                    android:id="@+id/images5"/>

                <TextView
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="Laura M"
                    android:layout_marginLeft="280dp"
                    android:layout_below="@id/images5"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="240dp"
            app:cardCornerRadius="3dp"
            android:id="@+id/card2"
            android:layout_marginTop="7dp"
            android:visibility="visible">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="200dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mission"
                    android:id="@+id/Mission"
                    android:textStyle="bold"
                    android:textSize="30dp"
                    android:textColor="@android:color/black"
                    android:layout_centerHorizontal="true"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/hinhgach"
                    android:id="@+id/hinhgach1"
                    android:layout_below="@+id/Mission"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/hinhgach1"
                    android:text="A mission is also a group of people who are sent to another place to do a particular job or to represent their country, organization, or religion, or the place where they go to do this work:
            A trade mission was sent to South Africa.
            a Methodist mission"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:cardCornerRadius="3dp"
            android:id="@+id/card3"
            android:layout_marginTop="7dp"
            android:visibility="visible">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="180dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:id="@+id/Address"
                    android:textStyle="bold"
                    android:textSize="30dp"
                    android:textColor="@android:color/black"
                    android:layout_centerHorizontal="true"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/hinhgach"
                    android:layout_below="@+id/Address"
                    android:id="@+id/hinhgach2"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_below="@id/hinhgach2"
                    android:src="@drawable/anh"
                    android:id="@+id/anhAddress"/>

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/anhAddress"
                    android:text="          227 Nguyen Van Cu, Phuong 4,
        Quan 5, Thanh pho Ho Chi Minh"
                    android:layout_marginLeft="70dp"
                    android:textSize="15dp"/>

            </RelativeLayout>
        </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>

